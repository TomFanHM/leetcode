---
import Layout from "../layout/Layout.astro";
---

<Layout title="404" description="Page not found">
  <div
    class="grid min-h-screen place-items-center px-6 py-24 text-base-content sm:py-32 lg:px-8"
  >
    <div class="text-center">
      <p class="text-base font-semibold text-primary">404</p>
      <h1 class="mt-4 text-3xl font-bold tracking-tight sm:text-5xl">
        Page not found
      </h1>
      <p class="mt-6 text-base leading-7 text-base-content/70">
        Sorry, we couldn’t find the page you’re looking for.
      </p>
      <div class="mt-10 flex items-center justify-center gap-x-6">
        <a
          href="/"
          class="hover:bg-primary-focus focus-visible:outline-primary-focus rounded-md bg-primary px-3.5 py-2.5 text-sm font-semibold text-primary-content shadow-sm focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2"
        >
          Go back home
        </a>
        <a href="/" class="text-sm font-semibold text-base-content">
          View other articles <span aria-hidden="true">&rarr;</span>
        </a>
      </div>
    </div>
  </div>
</Layout>

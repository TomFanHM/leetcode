---
import Card from "../../components/Card.astro";
import Layout from "../../layout/Layout.astro";
import { getCollection } from "astro:content";

const heading = "Articles";
const description =
  "Browse through my collection of articles, each a step in my journey through various coding problems. My aim is to present my solutions and learning experiences in a way that's relatable and easy to understand.";

const docs = await getCollection("articles");
const data = docs.map((el, i) => ({
  id: el.data.id,
  href: "/articles/" + el.slug,
  title: el.data.title,
  description: el.data.description,
  imageUrl: el.data.imageUrl,
  date: el.data.date,
  category: el.data.category,
}));
---

<Layout title={heading} description={description}>
  <div class="py-24 sm:py-32">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="mx-auto max-w-2xl lg:mx-0">
        <h2 class="text-3xl font-bold tracking-tight sm:text-4xl">
          {heading}
        </h2>
        <p class="mt-2 text-lg leading-8 text-base-content/70">{description}</p>
      </div>
      <div
        class="mx-auto mt-10 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 border-t border-base-content/50 pt-10 sm:mt-16 sm:pt-16 lg:mx-0 lg:max-w-none lg:grid-cols-3"
      >
        {data.map((doc, i) => <Card {...doc} />)}
      </div>
    </div>
  </div>
</Layout>
